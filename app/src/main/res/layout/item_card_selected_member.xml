<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_selected_member_image"
        android:layout_width="@dimen/selected_member_image_size"
        android:layout_height="@dimen/selected_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_user_place_holder"
        android:visibility="visible"
        android:padding="5dp"
        app:civ_border_color="@color/primary_text_color"
        app:civ_border_width="0.5dp"
        tools:visibility= "gone"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_add_members_image"
        android:layout_width="@dimen/selected_member_image_size"
        android:layout_height="@dimen/selected_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_add_member"
        android:padding="5dp"
        android:visibility="visible"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp"
        tools:visibility= "visible"/>

</LinearLayout>